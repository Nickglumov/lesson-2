>>> from num2words import num2words
>>> print(num2words(78))
seventy-eight
>>> print(num2words(15))
fifteen
>>> print(num2words(3))
three
>>> print(num2words(40))
forty
>>> print(num2words(8))
eight
>>> from transliterate import translit
>>> print(translit("seventy-eight", 'ru'))
севенты-еигхт
>>> print(translit("fifteen", 'ru'))
фифтеен
>>> print(translit("three", 'ru'))
тхрее
>>> print(translit("forty", 'ru'))
форты
>>> print(translit("eight", 'ru'))